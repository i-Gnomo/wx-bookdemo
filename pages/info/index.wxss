/* pages/info/index.wxss */
.info-box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  text-align: center;
}
.info-img{
  width: 300rpx;
  height: 430rpx;
  margin: 30rpx auto;
  border: 2px #ffffff solid;
  box-shadow: 0 4px 8px #c1c1c1;
}
.info-detail{
  font-size: 16px;
}
.info-author{
  font-size: 18px;
  color: #c1c1c1;
  margin-left: 20rpx;
}
.info-score{
  font-size: 16px;
  font-weight: bold;
  color: #ff0000;
  margin: 20rpx 0;
}
.info-content{
  padding: 20rpx 40rpx;
  text-align: left;
  line-height: 1.5em;
  font-size: 16px;
  color: #a1a1a1;
  text-indent: 2em;
  text-align: justify;
  text-justify:inter-word;
}